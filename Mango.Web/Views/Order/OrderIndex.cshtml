@model IEnumerable<OrderHeaderDto>

<div class="card shadow border-0 mt-4">
	<div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
		<div class="row">
			<h1 class="text-white">Order List</h1>
		</div>
	</div>
	<div class="card-body p-4">
		<table class="table table-bordered table-striped pt-3" style="width:100%">
			<thead>
				<tr>
					<th class="text-center">ID</th>
					<th class="text-center">Email</th>
					<th class="text-center">Name</th>
					<th class="text-center">Phone</th>
					<th class="text-center">Status</th>
					<th class="text-center">Total</th>
					<th class="text-center">Actions</th>
				</trclass>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td width="5%">
							@Html.DisplayFor(modelItem => item.OrderHeaderId)
						</td>
						<td width="25%">
							@Html.DisplayFor(modelItem => item.Email)
						</td>
						<td width="20%">
							@Html.DisplayFor(modelItem => item.Name)
						</td>
						<td width="10%">
							@Html.DisplayFor(modelItem => item.Phone)
						</td>
						<td width="10%">
							@Html.DisplayFor(modelItem => item.Status)
						</td>
						<td class="text-center" width="10%">
							@Html.DisplayFor(modelItem => item.OrderTotal)
						</td>
						<td width="8%">
							<div class="w-75 btn-group" role="group">
								<a asp-action="OrderDetails" asp-controller="Order" asp-route-orderId="@item.OrderHeaderId" class="btn btn-primary mx-2">
									<i class="bi bi-pencil-square"></i>
								</a>
							</div>

							
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>